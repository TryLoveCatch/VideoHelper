<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33000000"
    android:clickable="true">

    <ProgressBar
        android:id="@+id/sdk_ijk_progress_bar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminateBehavior="repeat"
        android:indeterminateDrawable="@drawable/video_progress_bar_bg"
        android:indeterminateOnly="true" />

    <ImageView
        android:id="@+id/sdk_ijk_progress_bar_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_loadingicon_video" />

    <TextView
        android:id="@+id/sdk_ijk_progress_bar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sdk_ijk_progress_bar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:lineSpacingExtra="10dp"
        android:lineSpacingMultiplier="1.2"
        android:text="连接服务器中..."
        android:textColor="@color/text_white"
        android:textSize="14dp" />

</RelativeLayout>