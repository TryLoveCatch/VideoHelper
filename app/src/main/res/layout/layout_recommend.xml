<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_hotword"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin_16dp"
        android:background="@color/background"
        android:orientation="vertical"
        android:padding="@dimen/layout_margin_16dp">

        <TextView
            android:id="@+id/hotword_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="@string/hotword_recommend"
            android:textColor="@color/text_black_secondary" />


        <android.luna.net.videohelper.widget.GridviewInScroll
            android:id="@+id/hot_video"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_16dp"
            android:horizontalSpacing="@dimen/layout_margin_16dp"
            android:numColumns="2"
            android:scrollbars="none"
            android:verticalSpacing="@dimen/layout_margin_8dp" />
    </LinearLayout>

</LinearLayout>