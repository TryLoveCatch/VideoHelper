<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/layout_margin_16dp">

    <ImageView
        android:id="@+id/img_catelogue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/img_select_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_catelogue"
        android:layout_alignRight="@id/img_catelogue"
        android:padding="2dp"
        android:src="@mipmap/home_ic_check"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/img_catelogue"
        android:layout_alignTop="@id/img_catelogue"
        android:src="@mipmap/point_red"
        android:visibility="gone" />

    <TextView
        android:id="@+id/catelogue_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_catelogue"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:paddingBottom="@dimen/padding_4dp"
        android:paddingTop="@dimen/padding_4dp"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_12sp" />

</RelativeLayout>
